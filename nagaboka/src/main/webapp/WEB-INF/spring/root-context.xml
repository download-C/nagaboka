  <!-- 로컬에서 돌릴 때 -->
  <bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName"
			value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy" />
		<property name="url"
		          value="jdbc:log4jdbc:mysql://localhost:3306/nagaboka"/>
    <property name="username" 
              value="root"/>
    <property name="password" 
              value="1234"/>
	</bean>  
	
	
<!-- 디비연결객체 dataSource -->	

	
	<!-- MyBatis 연동  SqlSessionFactoty -->
	<bean id="sqlSessionFactory" 
	      class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- setDataSource(DataSource dataSource)  -->
		<property name="dataSource"  ref="dataSource" />
		
		<!-- mybatis 설정 -->
		<property name="configLocation" 
		          value="classpath:/mybatis-config.xml"/>
		 
		<!-- mapper 설정 -->
		<property name="mapperLocations" 
		          value="classpath:mappers/**/*Mapper.xml" />       
		          
	</bean>	
	<!-- MyBatis 연동  SqlSessionFactoty -->
	
	<!-- 디비연동(MyBatis) + 자원해제 SqlSessionTemplate -->
	<bean id="sqlSession" 
	      class="org.mybatis.spring.SqlSessionTemplate" 
	      destroy-method="clearCache" >
	      <constructor-arg name="sqlSessionFactory"  ref="sqlSessionFactory"/>
	</bean>	
	<!-- 디비연동(MyBatis) + 자원해제 SqlSessionTemplate -->
		
	
	<!-- 다른 패키지에 있는 객체를 찾아서 빈으로 등록 -->	
	<context:component-scan base-package="com.nagaboka.persistence" />		
	<context:component-scan base-package="com.nagaboka.service" />	
	<context:component-scan base-package="com.nagaboka.openbank.service" />

	
</beans>